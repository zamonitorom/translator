<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="ru.mobilization.demo.translator.Utils.Variables" />

        <import type="ru.mobilization.demo.translator.Utils.LayoutManagers" />

        <variable
            name="translatorVM"
            type="ru.mobilization.demo.translator.ViewModels.TranslatorViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="@{translatorVM.langFrom.title}" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemLayout="@{@layout/item_language}"
                app:items="@{translatorVM.languagesFrom}"
                app:layoutManager="@{LayoutManagers.grid(1,0,false)}"
                app:variable="@{Variables.Item}" />

            <ru.mobilization.demo.translator.Utils.ExtendedEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:binding="@{translatorVM.textFrom}" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:rotation="90"
                app:srcCompat="@drawable/ic_settings_ethernet_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@{translatorVM.langTo.title}" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemLayout="@{@layout/item_language}"
                app:items="@{translatorVM.languagesTo}"
                app:layoutManager="@{LayoutManagers.grid(1,0,false)}"
                app:variable="@{Variables.Item}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@{translatorVM.textTo}" />

        </LinearLayout>
    </ScrollView>

</layout>
